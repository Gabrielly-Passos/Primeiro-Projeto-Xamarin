<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeiroApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#008E9B" Padding="24" CornerRadius="0">
            <Label Text="Bem Vindo" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button x:Name="btnCliqueAqui" Text="Clique Aqui" Clicked="btnCliqueAqui_Clicked"/>

        <Entry x:Name="txtNome" Placeholder=""/>
        <Button x:Name="btnVerificar"  Text="Verificar" Clicked="btnVerificar_Clicked" />
            <Button x:Name="btnLimpar" Text="Limpar" Clicked="btnLimpar_Clicked" />


        <Button x:Name="btnInformarDataNascimento" Text="Informe a data de nascimento" Clicked="btnInformarDataNascimento_Clicked" />

        <Label x:Name="lblDataNascimento" />
        <Button x:Name="btnOpcoes" Text="Opções"  Clicked="btnOpcoes_Clicked"/>
        
    </StackLayout>

</ContentPage>
